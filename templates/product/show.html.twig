{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} {% endblock %}

{% block body %}
    <h1>{{ product.name }}</h1>
    
    {% for image in product.images %}
        <img src="{{ vich_uploader_asset(image, 'image') | imagine_filter('product_deteil') }}">
    <p>{{ product.price/100 }}</p>
    <p>{{ product.description }}</p>
{% endblock %}



